<h1>Lets Play</h1>
<p> <%= @grid %></p>

<form class="form-group" action="/result" method='post'>
  <div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :start_time, Time.now %>
  </div>
  <label>Create your longest word!</label>
  <input name="guess" type="text" class="form-control my-form" placeholder="Type here">
  <input type="submit" class="btn btn-primary">
</form>
